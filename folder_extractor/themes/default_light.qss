QWidget {
    font-family: "Segoe UI", Arial, sans-serif;
    font-size: 9pt;
    background-color: #f0f0f0;
    color: #1e1e1e;
}

QMainWindow {
    background-color: #e8e8e8;
}

QGroupBox {
    border: 1px solid #c0c0c0;
    border-radius: 4px;
    margin-top: 12px;
    padding-top: 8px;
    background-color: #f8f8f8;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 5px 0 5px;
    left: 10px;
    color: #104e8b;
    font-weight: bold;
    background-color: #f0f0f0;
    border: 1px solid #c0c0c0;
    border-bottom: none;
    border-top-left-radius: 3px;
    border-top-right-radius: 3px;
}

QPushButton {
    background-color: #dcdcdc;
    border: 1px solid #b0b0b0;
    padding: 6px 12px;
    border-radius: 3px;
    color: #333333;
    min-height: 18px;
}
QPushButton:hover {
    background-color: #c8c8c8;
    border-color: #a0a0a0;
}
QPushButton:pressed {
    background-color: #b0b0b0;
}
QPushButton:disabled {
    background-color: #e8e8e8;
    color: #a0a0a0;
    border-color: #c0c0c0;
}

QLineEdit, QListWidget, QTextEdit, QDoubleSpinBox, QComboBox, QTreeView {
    border: 1px solid #b0b0b0;
    padding: 4px;
    border-radius: 3px;
    background-color: #ffffff;
    color: #1e1e1e;
}
QLineEdit:focus, QTextEdit:focus, QDoubleSpinBox:focus, QTreeView:focus {
    border: 1px solid #0078d7;
}
QTextEdit[readOnly="true"] {
    background-color: #f5f5f5;
}

QListWidget::item:selected, QTreeView::item:selected {
    background-color: #0078d7;
    color: #ffffff;
}
QListWidget::item:hover, QTreeView::item:hover {
    background-color: #e0e8f0;
}

QHeaderView::section {
    background-color: #e0e0e0;
    padding: 5px;
    border: 1px solid #c0c0c0;
    border-left: none;
    border-top:none;
    font-weight: bold;
    color: #333;
}
QHeaderView::section:first {
    border-left: 1px solid #c0c0c0;
}

QTabWidget::pane {
    border: 1px solid #c0c0c0;
    border-top: none;
    background-color: #f8f8f8;
}
QTabBar::tab {
    background-color: #dcdcdc;
    border: 1px solid #b0b0b0;
    border-bottom: none;
    padding: 7px 15px;
    border-top-left-radius: 3px;
    border-top-right-radius: 3px;
    margin-right: 2px;
    color: #444;
    font-weight: bold;
}
QTabBar::tab:selected {
    background-color: #f8f8f8;
    border-bottom: 1px solid #f8f8f8;
    color: #0078d7;
}
QTabBar::tab:!selected:hover {
    background-color: #c8c8c8;
}

QStatusBar {
    background-color: #dcdcdc;
    color: #333;
    font-weight: bold;
}
QStatusBar::item {
    border: none;
}

QMenu {
    border: 1px solid #a0a0a0;
    background-color: #fdfdfd;
    color: #1e1e1e;
}
QMenu::item {
    padding: 6px 25px 6px 25px;
}
QMenu::item:selected {
    background-color: #0078d7;
    color: #ffffff;
}
QMenu::separator {
    height: 1px;
    background: #c0c0c0;
    margin: 4px 0px 4px 0px;
}

QToolBox::tab {
    background-color: #e0e0e0;
    border: 1px solid #b0b0b0;
    padding: 6px;
    border-radius: 3px;
    font-weight: bold;
    color: #333;
}
QToolBox::tab:selected {
    background-color: #0078d7;
    color: white; /* Fixed: Ensure text is white on blue */
    font-style: normal;
}
QToolBox::tab:hover {
    background-color: #d0d0d0;
}


QScrollArea {
    border: none;
}

QCheckBox::indicator {
    width: 14px;
    height: 14px;
    border: 1px solid #888;
    border-radius: 2px;
}
QCheckBox::indicator:checked {
    background-color: #0078d7;
    border-color: #005a9e;
    image: url({ASSETS_DIR}/check.svg);
}
QCheckBox::indicator:unchecked {
    background-color: #ffffff;
}
QCheckBox::indicator:disabled {
    background-color: #e0e0e0;
    border-color: #b0b0b0;
}
QCheckBox { /* Ensure checkbox text color matches general text */
    color: #1e1e1e;
}


QTreeView QStandardItem[enabled="false"] { /* Item in tree that is not enabled */
    color: #888888;
}
